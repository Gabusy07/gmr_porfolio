---
import ErrorLayout from "../layouts/ErrorLayout.astro";
import { getLangFromUrl, useTranslations } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url)
const translate = useTranslations(lang)
---


  <ErrorLayout title="Error 404" , description=''>
    <div class="error_container border border-gray-300 rounded-xl">
      <div class="flex gap-x-4">
        <span>
          <img src="/sentiment_sad_FILL0_wght400_GRAD0_opsz24.svg" alt="">
        </span>
        <h3 class="text-left text-2xl">
          {translate('404Advice')}
        </h3>
        <span
          ><i>
            <img src="/info_FILL0_wght400_GRAD0_opsz24.svg" alt="info" />
          </i></span
        >
      </div>
      <div class="ml-9 mt-3 flex justify-start items-end gap-x-3">
        <small> You can return to the beginning through the following link </small>
        <img class="mt-1" src="/arrow_forward_FILL0_wght400_GRAD0_opsz24.svg" alt="">
        <a class="text-blue-700 text-base" href="./">return to the start</a>
      </div>
    </div>
  </ErrorLayout >


  <style>
    .error_container {
      padding: 10%;
      margin: 10% 5%;
    }
  </style>
