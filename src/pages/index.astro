---
import Footer from "../components/Footer.astro";
import Layout from "../layouts/Layout.astro";
import SectionContainer from "../components/SectionContainer.astro";
import Experience from "../components/Experience.astro";
import Hero from "../components/Hero.astro";
import Education from "../components/Education.astro";
import Language from "../components/Languages.astro";
import About from "../components/About.astro";
import Projects from "../components/Projects.astro";
import Skills from "../components/Skills.astro";
import { useTranslations, getLangFromUrl } from "../i18n/utils";


const lang = getLangFromUrl(Astro.url)
const translate = useTranslations(lang)
---

<Layout
  title="porfolio - web software developer fullstack"
  .
  description="fullstack developer"
>
  <main class="p-4 md:p-6 lg:p-8 xl:p-10">

    <SectionContainer id="hero" title=""><Hero /></SectionContainer>
    <SectionContainer id="about" title={translate('title.about')}><About /></SectionContainer>
    <SectionContainer id="languages" title={translate('title.lang')}><Language /></SectionContainer>
    <SectionContainer id="experience" title={translate('title.experience')}, icon="/work.svg"><Experience /></SectionContainer>
    <SectionContainer id="skills" title={translate('title.skill')}, icon="/person_check.svg"><Skills /></SectionContainer>
    <SectionContainer id="projects" title={translate('title.project')} icon="/construction.svg"><Projects /></SectionContainer>
    <SectionContainer id="" title={translate('title.education')}, icon="/school.svg"><Education /></SectionContainer>
  </main>
</Layout>
<Footer id="contact-me" />

<style>
   main {
      margin: auto;
      padding: 1rem;
      max-width: calc(100% - 2rem);
      font-size: 20px;
      line-height: 1.6;
    }
 
</style>
