---

interface Props {
  id: string;
  title:string;
  className?: string;
}

const {id, title, className }=  Astro.props;

---

<section id={id} class={`p-5 border border-gray-300 rounded-xl ${className}`}>
    <div class="container m-2">
      <h2 class="text-xl font-bold mb-5">
        {title}
      </h2>
    </div>
    <div class="ml-2">
      <slot/> 
    </div>
</section>

<style>
  section{
    min-width: 275px;
    max-width: 700px;
    margin: 0 auto 72px;
  }
</style>