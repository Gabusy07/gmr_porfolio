---
import { getLangFromUrl, getResume } from "../i18n/utils";


const lang = getLangFromUrl(Astro.url)

const education = getResume(lang).education;
---

<div class="font-normal text-pretty">
  {
    education.map((edu) => {
      return (
        <article>
              <h2 class="text-lg mb-3"> {` ${edu.studyType} in ${edu.area}`}</h2>
              <h4 class="text-base ">{`${lang === 'en'? 'at' : 'en'} ${edu.institution}`}</h4>
        </article>
      );
    })
  }
</div>
