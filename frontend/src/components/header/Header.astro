---
import NavLinkCustom from "../NavLinkCustom.astro";
---

<header class="h-15 border border-gray-400 rounded p-5 opacity-90 bg-gray-200 text-black">
  <div class="flex items-center justify-between mx-4">
    <div class="">
      <img src="" alt="avatar" />
    </div>
    <nav class="flex space-x-4">
      <NavLinkCustom linkName="work" href="./work">
        <Fragment slot="before">
          <img src="/info_FILL0_wght400_GRAD0_opsz24.svg" alt="" />
        </Fragment>
      </NavLinkCustom>

      <NavLinkCustom linkName="contact me" href="./contact-me">
        <Fragment slot="before">
          <img src="/info_FILL0_wght400_GRAD0_opsz24.svg" alt="" />
        </Fragment>
      </NavLinkCustom>
    </nav>
    <div>
      <div class="container__switch">
        <label class="switch">
          <input type="checkbox" id="toggleButton" />
          <span class="slider"></span>
        </label>
      </div>
    </div>
  </div>
</header>

<style>
  .container__switch {
    text-align: center;
  }

  .switch {
    position: relative;
    display: inline-block;
    width: 3rem;
    height: 1.25rem;
  }

  .switch input {
    opacity: 0;
    width: 0;
    height: 0;
  }

  .slider {
    position: absolute;
    cursor: pointer;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: #ccc;
    transition: 0.4s;
    border-radius: 1rem;
  }

  .slider:before {
    position: absolute;
    content: "";
    height: 1.5rem;
    width: 1.5rem;
    left: 0px;
    bottom: 0px;
    background-color: white;
    transition: 0.4s;
    border-radius: 50%;
  }

  input:checked + .slider {
    background-color: #2196f3;
  }

  input:focus + .slider {
    box-shadow: 0 0 1px #2196f3;
  }

  input:checked + .slider:before {
    transform: translateX(1.5rem);
  }

</style>
