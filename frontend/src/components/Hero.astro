---
import { basics } from "../resume.json";

const { name, label, location, image} = basics;
const { country, region } = location;
---

<div class="flex flex-col gap-[50px] lg:flex-row items-center">
    <div class="lg:mr-auto mb-4 lg:mb-0 lg:pr-4"> <!-- Utilizamos 'lg:mr-auto' para empujar el contenido hacia la izquierda en pantallas grandes -->
        <h1 class="text-2xl lg:text-3xl font-bold mb-2">{name}</h1>
        <h2 class="text-lg lg:text-xl font-semibold mb-2">{label}</h2>
        <span class="text-xs lg:text-base">{region}, {country}</span>
        
    </div>

    <figure>
        <img class="img max-w-[130px] rounded-md" src={image} alt={name}/>
    </figure>
</div>

<style>
    img{
        aspect-ratio: 1 / 1;
        object-fit: cover;
    }
</style>
