---
interface Props {
  linkName: string;
  href: string;
}

const { linkName, href} = Astro.props;
---
<div class="flex">
  <slot class="mx-1" name="before"/>
  <a class="mx-1 name bolder" href={href}>{linkName}</a>
  <slot class="mx-1" name="after"/>
</div>

<style>

  .name:active{
    color: red;

  }

</style>
   